<%= form_for @episode,  :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <div class="airdate">
    <%= f.label :airdate %><br />
    <%= f.date_select :airdate , start_year: 2000 %>
  </div>
  <div>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :abstract %><br />
    <%= f.text_area :abstract %>
  </div>

  <p><%= f.submit %></p>
<% end %>
